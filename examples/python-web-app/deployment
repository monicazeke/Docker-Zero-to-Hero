apiVersion: apps/v1
kind: Deployment
metadata:
  name: python
  labels:
    app: python-web-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: python-web-app
  template:
    metadata:
      labels:
        app: python-web-app
    spec:
      containers:
      - name: python
        image: moni1999/python-sample-app-demo
        ports:
        - containerPort: 8000
